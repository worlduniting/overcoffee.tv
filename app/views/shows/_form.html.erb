<%= simple_form_for(@show) do |f| %>
  <% if @show.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@show.errors.count, "error") %> prohibited this show from being saved:</h2>

      <ul>
      <% @show.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %><br>
    <%= f.text_field :title, :id => 'title_text', :size => 75 %>
  </div>

  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, :cols => 75, :rows => 10 %>
  </div>
  <div class="form-group">
    <%= f.label :guest_name %><br>
    <%= f.text_field :guest_name, :size => 75 %>
  </div>
  <div class="form-group">
    <%= f.input :published_date, as: :date_picker, :label => 'Published Date',
                    input_html: {data: {date_options: {defaultDate: '2012/12/25'}}} %>
  </div>
  <div class="form-group">
    <%= f.label :youtubeID %><br>
    <%= f.text_field :youtubeID, :size => 75 %>
  </div>
  <div class="form-group">
    <%= f.label :gender %><br>
    <%= f.select :gender, gender_options, {}, {:class => "custom-select"} %>
  </div>
  <div class="form-group">
    <%= f.label :age %><br>
    <%= f.text_field :age, :size => 3 %>
  </div>
  <div class="form-group">
    <%= f.label :zip %><br>
    <%= f.text_field :zip, :size => 10 %>
  </div>
  <div class="form-group">
    <%= f.label :religious_heritage %><br>
    <%= f.select :religious_heritage, religion_options, {}, {:class => "custom-select"} %>
  </div>
  <div class="form-group">
    <%= f.label :current_religion %><br>
    <%= f.select :current_religion, religion_options, {}, {:class => "custom-select"} %>
  </div>
      <%= f.submit :class => "btn btn-default" %>
<% end %>